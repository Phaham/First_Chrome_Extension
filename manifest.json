{
  "manifest_version": 3,
  "name": "LinkedIn Bot",
  "description": "React or Comment on given no of posts",
  "version": "3.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "images/title.png"
  },
  "icons": {
    "16": "images/title.png",
    "32": "images/title.png",
    "128": "images/title2.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/feed/"
      ],
      "js": [
        "content.js"
      ]
    }
  ],

  "host_permissions": [
    "https://www.linkedin.com/feed/"
  ],
  
  "permissions": [
    "activeTab",
    "tabs"
  ]
}
